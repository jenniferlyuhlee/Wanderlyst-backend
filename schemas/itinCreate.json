{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "User Auth Schema",
    "properties": {
        "username": {
            "type": "string"
        },
        "title": {
            "type": "string",
            "minLength": 1
        },
        "duration": {
            "type": "integer",
            "exclusiveMinimum": 0
        },
        "city": {
            "type": "string",
            "minLength": 1
        },
        "country": {
            "type": "string",
            "minLength": 1
        },
        "description": {
            "type": "string",
            "minLength": 1
        }
    },
    "required": [
        "username",
        "title",
        "duration",
        "city",
        "country",
        "description"
    ]
}